<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:QuizDickTionary.Application.ViewModels"
             x:DataType="vm:ShowResultQuizViewModel"
             x:Class="QuizDickTionary.Application.Views.ShowResultQuizView">

    <CollectionView ItemsSource="{Binding WordWithAnswers}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout>
                    <Label Text="{Binding English}"/>
                    <Label Text="{Binding MacAddress}"/>
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView
</ContentView>
