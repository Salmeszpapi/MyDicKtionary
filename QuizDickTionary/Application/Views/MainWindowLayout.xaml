<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizDickTionary.Application.Views.MainWindowLayout"
             xmlns:viewmodel="clr-namespace:QuizDickTionary.Application.ViewModels"
             Title="MainWindowLayout"
             x:DataType="viewmodel:MainWindowViewModel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <HorizontalStackLayout Grid.Row="0" Background="Orange">
            <ImageButton Margin="5" 
                    Source="quiz.png"
                    HeightRequest="50"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />
        </HorizontalStackLayout>
        <ContentView Grid.Row="1" Content="{Binding ContentView}" VerticalOptions="FillAndExpand" />
    </Grid>
</ContentPage>